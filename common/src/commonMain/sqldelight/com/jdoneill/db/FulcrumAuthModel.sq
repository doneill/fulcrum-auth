CREATE TABLE users (
    id TEXT NOT NULL PRIMARY KEY,
    first_name TEXT NOT NULL,
    last_name TEXT NOT NULL,
    email TEXT NOT NULL
);

CREATE TABLE organizations (
    id TEXT NOT NULL PRIMARY KEY,
    user_id TEXT NOT NULL,
    name TEXT NOT NULL,
    token TEXT NOT NULL
);

insertOrgs:
INSERT OR REPLACE INTO organizations(id, user_id, name, token)
VALUES (?,?,?,?);

insertUsers:
INSERT OR REPLACE INTO users(id, first_name, last_name, email)
VALUES (?,?,?,?);

selectAllUsers:
SELECT * FROM users;

selectUserByUserId:
SELECT * FROM users WHERE id = ?;

selectAllOrganizations:
SELECT * FROM organizations;

selectUserByOrganizationId:
SELECT * FROM organizations WHERE id = ?;

selectOrganizationByUserId:
SELECT * FROM organizations WHERE user_id = ?;

selecdOrganizationByName:
SELECT * FROM organizations WHERE name = ?;

deleteAllOrgs:
DELETE FROM organizations;

deleteAllUsers:
DELETE FROM users;

selectJoinUserOrgByUserId:
SELECT first_name, last_name, name, token FROM users INNER JOIN organizations ON organizations.user_id = users.id WHERE users.id = ?;
VALUES(?);

